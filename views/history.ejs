<%- include('./partials/header'); %>

    <div class="content-container">
    <h1><%= pageTitle %></h1>
    <div class="form-container">
    <form action="/history" method="post">
        <input type="text" name="event" placeholder="Type the event">
        <button type="submit">Get The Events</button>
    </form>
    </div>
    <% if (apiData) { %>
    <% for (let data of apiData) { %>
    <div class="search-results">
        <p>Date : <%= data.year %>/<%= data.month %>/<%= data.day %> </p>
        <p>Event : <%= data.event %> </p>
    </div>
    <% } %>
    <% } else if (error) { %>
        <p class="error"><%= error %></p>
    <% } %>
    </div>
    <div class="content">
        <h1>HISTORICAL EVENTS</h1>
        <p>Get to know historical events.</p>
        <!-- Use a button to pause/play the video with JavaScript -->
        <button id="myBtn" onclick="myFunction()">Pause</button>
      </div>
      <video autoplay muted loop id="myVideo">
        <source src="/videos/history.mp4" type="video/mp4">
        </video>
      <%- include('./partials/footer') %>