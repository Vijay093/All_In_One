<%- include('./partials/header'); %>

    <div class="content-container">
    <h1><%= pageTitle %></h1>
    <div class="form-container">
    <form action="/exercises" method="post">
        <input type="text" name="muscle" placeholder="Type the muscle Group">
        <button type="submit">Get Exercises</button>
    </form>
    </div>
    <% if (apiData) { %>
        <% for (let data of apiData) { %>
        <div class="search-results">
            <h3>Name : <%= data.name %> </h3>
            <h2>Type : <%= data.type %> </h2>
            <h2>Equipment: <%= data.equipment %> </h2>
            <h2>Difficulty: <%= data.difficulty %> </h2>
            <p>Instructions: <%= data.instructions %></p>
        </div>
        <% } %>
        <% } else if (error) { %>
            <p class="error"><%= error %></p>
        <% } %>
    </div>
    <div class="content">
        <h1>Exercises</h1>
        <p>Show the workouts.</p>
        <!-- Use a button to pause/play the video with JavaScript -->
        <button id="myBtn" onclick="myFunction()">Pause</button>
      </div>
      <video autoplay muted loop id="myVideo">
        <source src="/videos/exercise.mp4" type="video/mp4">
        </video>
      <%- include('./partials/footer') %>