<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="modern-theme">
    <video autoplay muted loop id="myVideo">
        <source src="/videos/exercise.mp4" type="video/mp4">
      </video>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/country">Country</a></li>
            <li><a href="/logo">Logo</a></li>
            <li><a href="/dict">Dictionary</a></li>
            <li><a href="/facts">Facts</a></li>
            <li><a href="/history">History</a></li>
            <li><a href="/jokes">Jokes</a></li>
            <li><a href="/recipe">Recipe</a></li>
            <li><a href="/quotes">Quotes</a></li>
            <li><a href="/riddles">Riddles</a></li>
            <li><a href="/thesaurus">Thesaurus</a></li>
            <li><a href="/weather">Weather</a></li>
            <li><a href="/exercises">Exercises</a></li>
            <li><a href="/password">Password Generator</a></li>
        </ul>
    </nav>

    <div class="container">
    <h1><%= pageTitle %></h1>
    <div class="form-container">
    <form action="/exercises" method="post">
        <input type="text" name="muscle" placeholder="Type the muscle Group">
        <button type="submit">Get Exercises</button>
    </form>
    </div>
    <% if (apiData) { %>
        <% for (let data of apiData) { %>
        <div class="search-results">
            <h3>Name : <%= data.name %> </h3>
            <h2>Type : <%= data.type %> </h2>
            <h2>Equipment: <%= data.equipment %> </h2>
            <h2>Difficulty: <%= data.difficulty %> </h2>
            <p>Instructions: <%= data.instructions %></p>
        </div>
        <% } %>
        <% } else if (error) { %>
            <p class="error"><%= error %></p>
        <% } %>
        <div class="clock">
            <p><span id="ist-time"></span></p>
        </div>
    </div>
    <div class="content">
        <h1>Exercises</h1>
        <p>Show the workouts.</p>
        <!-- Use a button to pause/play the video with JavaScript -->
        <button id="myBtn" onclick="myFunction()">Pause</button>
      </div>
    <script src="/js/script.js" type="text/javascript"></script>
</body>
</html>