<%- include('./partials/header'); %>
    <div class="content-container">
    <h1><%= pageTitle %></h1>
    <div class="form-container">
    <form action="/dict" method="post">
        <input type="text" name="dict" placeholder="Enter search term">
        <button type="submit">Search</button>
    </form>
    </div>
    <% if (apiData) { %>
        <% if (apiData.valid) { %>
    <div class="search-results">
        <h2> Word: <%= apiData.word %></h2>
        <p> Definition: <%= apiData.definition %></p>
    </div>
    <% } } else if (error) { %>
        <p class="error"><%= error %></p>
    <% } %>
</div>
<div class="content">
    <h1>Dictionary</h1>
    <p>Get The Meanings.</p>
    <!-- Use a button to pause/play the video with JavaScript -->
    <button id="myBtn" onclick="myFunction()">Pause</button>
  </div>
  <video autoplay muted loop id="myVideo">
    <source src="/videos/dictionary.mp4" type="video/mp4">
    </video>
<%- include('./partials/footer'); %>
